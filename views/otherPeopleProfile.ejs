<%- include("partials/header")%>
<div class="page-center-100">
  <a href="/" class="back-to-dashboard">back </a>
  <div class="container-profile-edit">
    <div class="left">
      <% if(lists[0]){%>
      <h2><%=user.name%> blogs</h2>
      <% lists.forEach(elem => { %>
      <!-- <%= JSON.stringify(elem.blog)%> -->
      <div class="single-blog">
        <h3>
          <img height="30" src="/uploads/<%= user.avatar%>" alt="" />
          <%= user.name%>
        </h3>
        <div class="blog"><%- elem.blog%></div>
        <a href="/read-blog/<%=elem._id%> " class="read-blog-btn">
          <img src="./images/publish.png" alt="read more" />
        </a>
        <div class="gradient"></div>
      </div>

      <% }) %> <% } else {%>
      <div class="no-post-container">
        <img src="/images/no-post.jpeg" alt="" />

        <div class="no-post">
          <h2>Nothing published yet.</h2>
          <p>
            Writing ideas down helps you learn and remember things easily. Try
            it, create your first idea!
          </p>

          <a href="/write" class="no-post-write-btn">
            <img src="/images/write.svg" alt="" />
            create your first idea
          </a>
        </div>
      </div>

      <% }%>
    </div>
    <div class="right">
      <img class="profile-pic" src="/uploads/<%=user.avatar%>" alt="" />
      <div class="profile-pic-set-row-1">
        <div class="item">
          <h3><%=user.name%></h3>
          <p><%= user.about%></p>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("partials/footer")%>
